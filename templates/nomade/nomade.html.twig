{% extends 'header/index.html.twig' %}

{% block title %}{% include 'includes/qleaq_title.html.twig' %}Gestion de compte Locataire{% endblock %}

{% block content %}
<section>

    {% if is_granted('ROLE_USER') %}

        <section class="hero is-normal is-primary is-bold">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">
                        Modifiez votre profil locataire : {{ app.user.username }}
                    </h1>
                    <h2 class="subtitle">
                        Complétez ou modifiez les informations de votre profil
                    </h2>
                </div>
            </div>
        </section>



        <div class="columns is-centered section">



            <div class="column is-half is-one-third-desktop">





                <div class="field" >
                    {{ form_start(nomadeForm) }}


                    {% include 'includes/flash_message.html.twig' %}



                    {% if form_errors(nomadeForm) != null %}
                        <div class="notification is-danger">
                            <button class="delete" onclick="this.parentElement.parentElement.removeChild(this.parentElement);"></button>
                            {{ form_errors(nomadeForm) }}
                        </div>
                    {% endif %}


                    <div class="field">
                        <label class="label">Civilitée</label>

                            <div class="select" style="width: 100%">
                                {{ form_row(nomadeForm.sexe, {placeholder: 'Choisissez ...', 'attr' : {'class' : 'select input', 'alt' : 'civilite'}
                                }) }}
                            </div>

                    </div>

                    <div class="field">
                        <label class="label">Nom</label>
                        <div class="control">
                            {{ form_row(nomadeForm.nom, {'attr' : {'class' : 'input', 'placeholder' : 'Entrez votre Nom' , 'alt' : 'nom'},
                            }) }}
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Prénom</label>
                        <div class="control">
                            {{ form_row(nomadeForm.prenom, {'attr' : {'class' : 'input', 'placeholder' : 'Entrez votre Prénom' , 'alt' : 'prenom'}
                            }) }}
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Selectionnez votre date de naissance</label>
                        <div class="control">

                            <div class="select">{{ form_row( nomadeForm.date_naissance.day, {'label' : ' ', 'attr' : {'class' : 'select'}} ) }}</div>
                            <div class="select">{{ form_row( nomadeForm.date_naissance.month, {'label' : ' ', 'attr' : {'class' : 'select'}} ) }}</div>
                            <div class="select">{{ form_row( nomadeForm.date_naissance.year, {'label' : ' ', 'attr' : {'class' : 'select'}} ) }}</div>

                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Email</label>
                        <div class="control">
                            {{ form_row(nomadeForm.email, {'attr' : {'class' : 'input', 'placeholder' : 'Entrez votre Adresse Email' , 'alt' : 'email'}
                            }) }}
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Numéro de téléphone</label>
                        <div class="control">
                            {{ form_row(nomadeForm.telephone, {'attr' : {'class' : 'input', 'placeholder' : 'ex : 0102030405', 'pattern' : '[0-9]{10}', 'onkeyup' : 'verif_nombre(this);verif_nombre_max(this,10);' , 'alt' : 'telephone' }
                            }) }}
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Adresse</label>
                        <div class="control">
                            {{ form_row(nomadeForm.adresse, {'attr' : {'class' : 'input', 'placeholder' : 'ex : 1 rue qleaq' , 'alt' : 'adresse'}
                            }) }}
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Entrez votre code postale</label>
                        <div class="control">
                            {{ form_row(nomadeForm.cp, {'attr' : {'class' : 'input', 'placeholder' : 'ex : 75000', 'pattern' : '[0-9]{5}', 'onkeyup' : 'verif_nombre(this);verif_nombre_max(this,5);' , 'alt' : 'code_postale'  }
                            }) }}
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Entrez votre Ville</label>
                        <div class="control">
                            {{ form_row(nomadeForm.ville, {'attr' : {'class' : 'input', 'placeholder' : 'Entrez votre ville' , 'alt' : 'ville'}
                            }) }}
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Présentez vous</label>
                        <div class="control">
                            {{ form_row(nomadeForm.presentation, {'attr' : {'class' : 'textarea','rows' : 10 , 'placeholder' : 'Présentez vous', 'style' : 'resize:none;' , 'alt' : 'presentation'}
                            }) }}
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Votre statut</label>
                        <div class="select" style="width: 100%">
                            {{ form_row(nomadeForm.statut, {placeholder: 'Choisissez ...', 'attr' : {'class' : 'select input' , 'alt' : 'statut'}
                            }) }}
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Type de séjour</label>
                        <div class="select" style="width: 100%">
                            {{ form_row(nomadeForm.type_sejour, {placeholder: 'Choisissez ...', 'attr' : {'class' : 'select input' , 'alt' : 'type de sejour'}
                            }) }}
                        </div>
                    </div>


                    {#{% include('includes/add_photo_nomade_form.html.twig') %}#}


                    <div class="column is-centered ">
                        <a class="button is-primary" style="width: 100%;" href="{{ path('change_password') }}">Changer votre mot de passe</a>
                    </div>






                    <div class="column is-centered">
                        <button type="submit" style="width: 100%;" class="button is-info">Valider les modifications</button>
                    </div>



                    {{ form_end(nomadeForm) }}



                </div>
            </div>
        </div>

    {% else %}

        <section class="hero is-dark is-bold is-large">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">
                        Vous n'êtes pas éligible à cette page
                    </h1>
                    <a class="button is-large" style="margin: auto" href="{{ path('header') }}">Revenir à l'Accueil</a>
                </div>
            </div>
        </section>

    {% endif %}

</section>



{#    VERIFICATION REMPLISSAGE DES CHAMPS EN JAVASCRIPT   #}
    <script language="Javascript">
        function verif_nombre(champ)
        {
            var chiffres = new RegExp("[0-9]");
            var verif;
            var points = 0;

            for(x = 0; x < champ.value.length; x++)
            {
                verif = chiffres.test(champ.value.charAt(x));
                if(champ.value.charAt(x) == "."){points++;}
                if(points > 1){verif = false; points = 1;}
                if(verif == false){champ.value = champ.value.substr(0,x) + champ.value.substr(x+1,champ.value.length-x+1); x--;}
            }
        }
    </script>

{% endblock %}



