{% extends 'header/index.html.twig' %}

{% block title %}
    {% include 'includes/qleaq_title.html.twig' %}Récupération de mot de passe
{% endblock %}

{% block content %}
    <div class="columns is-centered section">
        <div class="column is-half box">
            <h1 class="title has-text-primary has-text-centered">
                Mot de passe perdu
            </h1>

            {{ form_start(lost_proprio_password_form) }}


                <div class="field">

                    <label class="label">Email</label>

                    <div class="control">
                        {{ form_row(lost_proprio_password_form.email, {'attr' : {'class' : 'input', 'placeholder' : 'ex : mail@mail.com', 'alt' : 'email'}
                        }) }}
                    </div>

                </div>

            {% include 'includes/flash_message.html.twig' %}


            <button type="submit" class="button is-info is-fullwidth">
                Envoyer l'email de réinitialisation
            </button>

            {{ form_end(lost_proprio_password_form) }}








        </div>
    </div>
{% endblock %}