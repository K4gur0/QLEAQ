{% extends 'header/index.html.twig' %}

{% block title %}{% include 'includes/qleaq_title.html.twig' %}Reinitialisation du mot de passe{% endblock %}

{% block content %}

    <div class="columns is-centered section">
        <div class="column is-one-third">
            <h1 class="title has-text-primary has-text-centered">
                Réinitialisation du mot de passe
            </h1>



            {{ form_start(reset_form) }}

            <div class="field">
                <label class="label">Entrez votre nouveau mot de passe</label>
                <div class="control">
                    {{ form_row(reset_form.plainPassword.first, {'attr' : {'placeholder' : 'Entrez le Mot de passe', 'class' : 'input', 'alt' : 'password'}
                    }) }}
                </div>
            </div>

            <div class="field">
                <label class="label">Validez votre nouveau mot de passe</label>
                <div class="control">
                    {{ form_row(reset_form.plainPassword.second, {'attr' : {'placeholder' : 'Répétez votre mot de passe', 'class' : 'input', 'alt' : 'confirm password'}
                    }) }}
                </div>
            </div>

            {% if form_errors(reset_form) != null %}
                <div class="notification is-danger">
                    <button class="delete" onclick="this.parentElement.parentElement.removeChild(this.parentElement);"></button>
                    {{ form_errors(reset_form) }}
                </div>
            {% endif %}

            {% include 'includes/flash_message.html.twig' %}

            <button type="submit" class="button is-info">Modifier</button>

            {{ form_end(reset_form) }}

        </div>
    </div>



{% endblock %}