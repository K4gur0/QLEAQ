<div class="field">

    <label class="label">Photo de profile</label>

    {% if nomade.photoprofile is null %}

        <div class="column is-flex" style="justify-content: center;">


                <figure class="image is-256x256">
                    <img src="https://bulma.io/images/placeholders/128x128.png">
                </figure>


        </div>


    {% else %}



        <div class="column is-flex" style="justify-content: center;">
            <figure class="image is-256x256">
                <img src="{{ asset('/uploads/photos_nomades/' ~ nomade.photoprofile) }}" alt="Photo de profile" style="width: 256px;height: 256px">
            </figure>

            {% if nomade.photoprofile is not null %}

                <a href="{{ path('nomade_remove_picture') }}" class="delete"></a>

            {% endif %}

        </div>

    {% endif %}

<div class="column">
    {{ form_row(nomadeForm.photo_profile) }}
</div>


